<style>
   /* Overall page layout */
.video-index {
  max-width: 1200px;
  margin: 40px auto;
  padding: 20px;
  background-color: var(--bg);
}

.page-title {
  font-size: 2rem;
  font-weight: 700;
  color: var(--primary);
  margin-bottom: 20px;
  text-align: center;
}

/* Grid layout for videos */
.video-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

/* Video Card Styles */
.video-card-wrapper {
  display: flex;
  justify-content: center;
}

.video-card {
  width: 300px;
  background-color: var(--bg);
  border-radius: 16px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
}

.video-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
}

.video-thumbnail {
  width: 100%;
  height: 200px;
  background: #eaeaea;
  position: relative;
  overflow: hidden;
  border-radius: 16px 16px 0 0;
}

.video-thumbnail .video-player {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.no-video {
  text-align: center;
  line-height: 200px;
  color: #888;
  font-size: 1.2rem;
}

.video-card-info {
  padding: 20px;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.video-title {
  font-size: 1.3rem;
  font-weight: 600;
  color: var(--primary);
  margin-bottom: 10px;
}

.video-description {
  color: var(--text-light);
  font-size: 1rem;
  margin-bottom: 15px;
}

.video-categories {
  font-size: 0.9rem;
  color: var(--text-light);
  margin-bottom: 10px;
}

/* Comments Section */
.comments-section {
  margin-top: auto;
  padding-top: 15px;
  border-top: 1px solid #eee;
}

.comments-section h4 {
  font-size: 1.1rem;
  color: var(--primary);
  margin-bottom: 10px;
}

.comment {
  padding: 8px 0;
  border-bottom: 1px solid #f0f0f0;
}

.comment p {
  margin: 0;
  font-size: 0.9rem;
  color: var(--text);
}

.comment strong {
  color: var(--primary);
}

.comment-textarea {
  width: 100%;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
  margin-bottom: 8px;
  resize: vertical;
  min-height: 60px;
  font-family: inherit;
}

.comment-submit-btn {
  background-color: var(--primary);
  color: white;
  border: none;
  padding: 6px 12px;
  border-radius: 4px;
  cursor: pointer;
  font-size: 0.9rem;
  transition: background-color 0.2s;
}

.comment-submit-btn:hover {
  background-color: var(--primary-light);
}

.like-button {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  font-size: 0.8rem;
  color: #666;
  cursor: pointer;
  margin-top: 4px;
}

.like-button:hover {
  color: #e74c3c;
}

/* Video Actions */
.video-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 15px;
  gap: 8px;
}

.btn-action {
  padding: 8px 15px;
  border-radius: 8px;
  text-decoration: none;
  font-weight: 600;
  color: white;
  transition: all 0.3s ease;
  font-size: 0.9rem;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  cursor: pointer;
  flex: 1;
}

.btn-action i {
  margin-right: 5px;
}

.btn-show {
  background-color: var(--primary);
}

.btn-show:hover {
  background-color: var(--primary-light);
  transform: translateY(-2px);
}

.btn-edit {
  background-color: var(--secondary);
}

.btn-edit:hover {
  background-color: var(--highlight);
  transform: translateY(-2px);
}

.btn-delete {
  background-color: #e74c3c;
}

.btn-delete:hover {
  background-color: #c0392b;
  transform: translateY(-2px);
}

.inline-form {
  display: inline;
}

/* Empty state if no videos exist */
.empty-state {
  text-align: center;
  padding: 40px;
  border-radius: 16px;
  background-color: var(--bg);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  grid-column: 1 / -1;
}

.empty-state h3 {
  font-size: 2rem;
  font-weight: 600;
  color: var(--primary);
}

.empty-state p {
  font-size: 1.1rem;
  color: var(--text-light);
  margin-bottom: 20px;
}

.upload-btn {
  padding: 10px 20px;
  border-radius: 8px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}
</style>

<%= render 'layouts/navbar' %> 

<div class="video-index">
  <h2 class="page-title">Your Video Collection</h2>

  <%= render 'layouts/flash' %>

  <section class="video-grid" aria-label="Video Collection">
    <% if @videos.any? %>
      <% @videos.each do |video| %>
        <article class="video-card-wrapper">
          <div class="video-card">
            <div class="video-thumbnail">
              <% if video.files.attached? %>
                <%= video_tag url_for(video.files.first), controls: true, class: 'video-player' %>
              <% else %>
                <div class="no-video">No Video Available</div>
              <% end %>
            </div>

            <div class="video-card-info">
              <h3 class="video-title"><%= video.title %></h3>
              <p class="video-description"><%= video.description.truncate(100) %></p>

              <% if video.categories.any? %>
                <p class="video-categories"><strong>Categories:</strong> <%= video.categories.map(&:name).to_sentence %></p>
              <% end %>

              <div class="comments-section">
                <h4>Comments</h4>

                <%= form_with(model: [video, Comment.new], local: true) do |form| %>
                  <%= form.text_area :content, placeholder: "Add a comment...", class: "comment-textarea" %>
                  <%= form.submit "Post", class: "comment-submit-btn" %>
                <% end %>

                <% video.comments.each do |comment| %>
                  <div class="comment">
                    <p>
                      <strong><%= comment.user.name %></strong>: <%= comment.content %>
                    </p>
                    <span data-controller="like" 
                          data-like-id="<%= comment.id %>" 
                          data-like-type="Comment" 
                          class="like-button">
                      ‚ù§Ô∏è <span data-like-target="count"><%= comment.likes.count %></span>
                    </span>
                  </div>
                <% end %>
              </div>

              <div class="video-actions">
                <%= link_to '‚úè Edit', edit_video_path(video), class: 'btn-action btn-edit' %>
                <%= form_with url: video_path(video), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "inline-form" do %>
                  <%= button_tag "üóë Delete", class: "btn-action btn-delete" %>
                <% end %>
              </div>
            </div>
          </div>
        </article>
      <% end %>
    <% else %>
      <div class="empty-state">
        <h3>No Videos Yet</h3>
        <p>Get started by uploading your first masterpiece üé•</p>
        <%= link_to 'Upload Your First Video', new_video_path, class: 'btn btn-primary upload-btn' %>
      </div>
    <% end %>
  </section>
</div>