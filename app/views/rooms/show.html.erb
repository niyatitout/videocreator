 <%= render 'layouts/navbar' %>
 <div class="flex flex-col h-screen">
  <div class="p-4 border-b">
    <h1 class="text-xl font-bold"><%= @room.name %></h1>
  </div>
  <br>
  <hr>

  <!-- âœ… Real-time Turbo stream subscription -->
  <%= turbo_stream_from "room_#{@room.id}_messages" %>

  <div id="messages" class="flex-1 overflow-y-auto p-4 space-y-4">
    <%= render @room.messages.order(created_at: :asc), current_user: current_user %>
  </div>
  <br>
  <hr>

  <div class="p-4 border-t">
    <%= render "messages/form", room: @room %>
  </div>
</div>
