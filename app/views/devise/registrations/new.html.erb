  width: 100%;
  padding: 12px 16px;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  font-size: 14px;
}

.input-group input:focus {
  outline: none;
  border-color: #94a3b8;
}

/* Checkbox */
.checkbox-group {
  display: flex;
  align-items: center;
  margin: 20px 0;
  font-size: 14px;
}

.checkbox-group input {
  margin-right: 8px;
}

.checkbox-group a {
  color: #3b82f6;
  text-decoration: none;
}

/* Button */
.btn-primary {
  width: 100%;
  padding: 12px;
