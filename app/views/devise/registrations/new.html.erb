<div class="auth-container">
  <div class="auth-card">
    <!-- Header -->
    <div class="auth-header">
      <h1>VideoCreator</h1>
      <h2>Join us today</h2>
      <p>Create your account to start editing</p>
    </div>

    <!-- Form -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Email -->
      <div class="input-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", required: true %>
      </div>

      <!-- Password -->
      <div class="input-group">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (min 8 characters)", required: true %>
        <% if @minimum_password_length %>
          <small class="form-text">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      </div>

      <!-- Confirm Password -->
      <div class="input-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", required: true %>
      </div>

      <!-- Terms Checkbox -->
      <div class="checkbox-group">
        <input type="checkbox" id="terms" required>
        <label for="terms">I agree to the <a href="#">Terms</a> and <a href="#">Privacy Policy</a></label>
      </div>

      <!-- Submit Button -->
      <%= f.submit "Create Account", class: "btn-primary" %>
    <% end %>

    <!-- Divider -->
    <div class="divider">
      <span>or continue with</span>
    </div>

    <!-- Social Login -->
    <div class="social-login">
      <%= link_to user_google_oauth2_omniauth_authorize_path, class: "social-btn google", method: :post, data: { turbo: 'false' } do %>
        Sign in with Google
      <% end %>
    </div>

    <!-- Login Link -->
    <div class="auth-footer">
      Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %>
    </div>
  </div>
</div>

<style>
