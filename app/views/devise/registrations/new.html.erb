/* Social Login */
.btn-social {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  width: 100%;
  padding: 12px;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  background: white;
  color: #334155;
  font-size: 14px;
  font-weight: 500;
  text-decoration: none;
}

.btn-social:hover {
  background: #f8fafc;
}

/* Footer */
.auth-footer {
  text-align: center;
  margin-top: 24px;
  color: #64748b;
  font-size: 14px;
}

.auth-footer a {
  color: #2563eb;
  text-decoration: none;
  font-weight: 500;
}
</style>